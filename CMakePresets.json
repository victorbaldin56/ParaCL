{
    "version": 6,
    "configurePresets": [
      {
        "name": "gcc_debug_san",
        "displayName": "gcc config with address and UB sanitizers.",
        "generator": "Ninja",
        "cacheVariables": {
          "CMAKE_C_COMPILER": "gcc",
          "CMAKE_C_COMPILER_LAUNCHER": "ccache",
          "CMAKE_CXX_COMPILER": "g++",
          "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
          "CMAKE_CXX_FLAGS": "-fsanitize=address,leak,undefined"
        }
      }
    ]
}
